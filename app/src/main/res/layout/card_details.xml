<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/details_card_margin"
        android:elevation="100dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#F5FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="0dp">

            <LinearLayout
                android:id="@+id/L1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/card_content_margin"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPublisherLogo"
                    android:layout_width="@dimen/card_logo_size"
                    android:layout_height="@dimen/card_logo_size"
                    android:background="@mipmap/swufe_info_logo"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:tileMode="disabled" />

                <TextView
                    android:id="@+id/tvPublisherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="经济信息工程学院"
                    android:textColor="#000000"
                    android:textSize="@dimen/publisher_name_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDivider1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="6dp"
                android:background="#DFAFAFAF" />

            <LinearLayout
                android:id="@+id/L2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/card_content_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_textview_margin"
                    android:text="10.30"
                    android:textColor="#000000"
                    android:textSize="@dimen/content_size" />

                <TextView
                    android:id="@+id/tvPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_textview_margin"
                    android:text="经世楼B303"
                    android:textColor="#000000"
                    android:textSize="@dimen/content_size" />

                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_textview_margin"
                    android:text="#嘻嘻嘻嘻嘻嘻嘻嘻寻寻寻寻寻寻寻寻寻寻寻嘻嘻嘻嘻嘻嘻嘻嘻寻寻寻寻寻寻寻寻寻寻寻寻嘻嘻嘻嘻嘻嘻嘻嘻寻寻寻寻寻寻寻寻寻寻寻寻"
                    android:textColor="#000000"
                    android:textSize="@dimen/content_size" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvDivider2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="6dp"
                android:background="#DFAFAFAF" />
            <LinearLayout
                android:id="@+id/L3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="@dimen/card_content_margin"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/small_icon_margin"
                    app:srcCompat="@drawable/like" />
                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/small_icon_margin"
                    app:srcCompat="@drawable/add" />
                <ImageView
                    android:id="@+id/ivComment"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/small_icon_margin"
                    app:srcCompat="@drawable/comment" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>