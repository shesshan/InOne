<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/entry_marginVertical"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/entry_padding">

            <LinearLayout
                android:id="@+id/leftPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPublisherLogo"
                    android:layout_width="@dimen/entry_logo_size"
                    android:layout_height="@dimen/entry_logo_size"
                    android:layout_marginLeft="0.2dp"
                    android:layout_marginTop="0.2dp"
                    android:background="@mipmap/swufe_info_logo"
                    android:scaleType="centerInside"
                    android:tileMode="disabled" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/publisher"
                android:layout_marginLeft="@dimen/entry_rightPart_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPublisherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="经济信息工程学院"
                    android:textColor="#000000"
                    android:textSize="@dimen/publisher_name_size" />

                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="@dimen/entry_content_marginVertical"
                    android:text="西南财经大学第三届国际金融科技论坛SWUFE&#038;CDAR。"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDivider2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_weight="1"
                android:background="#A1D8D8D8" />
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>